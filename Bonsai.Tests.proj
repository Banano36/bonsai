<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Test">
  <ItemGroup>
    <TestAssemblies Include="**\bin\Release\**\*.Tests.dll"/>
  </ItemGroup>

  <Target Name="Test">
    <Exec Condition=" '@(TestAssemblies)' != ''"
          Command="vstest.console.exe @(TestAssemblies ->'&quot;%(FullPath)&quot;', ' ')" />
  </Target>
</Project>